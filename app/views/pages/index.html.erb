        <div class="event-section-title-border-top"></div>
        <div class="event-section-title"><%= t('index.other_events.title') %></div>
        <div class="event-section-title-border-bottom"></div>
        <p class="event-section-description"></p>
        <div class="event-section-items">
          <div class="event-item">
            <div class="event-title item-title"><%= t('index.other_events.bbq.title') %></div>
            <div class="event-date"><%= t('index.other_events.bbq.date') %><br><%= t('index.other_events.bbq.time') %></br></div>
            <div class="event-venue"><%= t('index.other_events.bbq.venue') %></div>
            <div class="event-address"><%= t('index.other_events.bbq.address') %></div>
            <div class="event-description">
              <p><%= t('index.other_events.bbq.description') %><br></p>
            </div>
          </div>
          <div class="event-separator"></div>
          <div class="event-item">
            <div class="event-title item-title"><%= t('index.other_events.parties.title') %></div>
            <div class="event-date"><%= t('index.other_events.parties.date') %><br><%= t('index.other_events.parties.time') %></br></div>
