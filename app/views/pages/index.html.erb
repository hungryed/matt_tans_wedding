<header id="header">
  <div class="header-background"></div>
  <div id="cover-image">
    <img class="wide-cover-image" src="//media.front.xoedge.com/images/2008bd88-afac-41e8-a264-d062d7e88444~rt_0-cr_0.894.2667.2231"/>
  </div>
  <div id="title-container">
    <h1 id="wedding-title">Tania and Matthew</h1>
    <h2 id="wedding-date-location">
      <span id="wedding-date">August 22, 2015</span> in <span id="wedding-location">Heredia, He</span>
    </h2>
    <h2 id="wedding-countdown"><%= t('index.days_to_go', :days_left => ((DateTime.parse('August 22, 2015').to_i - Time.now.to_i) / (24 * 60 * 60)  + 1))%></h2>
  </div>
</header>
<div id="content">
  <div class="content-background"></div>
  <div class="page">
    <div class="page-background"></div>
    <div class="page-sections">
      <div class="anchor" id="our-wedding"></div>
      <div class="wedding-event-section">
        <div class="wedding-event-section-background"></div>
        <div class="wedding-event-section-title-border-top"></div>
        <div class="wedding-event-section-title"><%= t('nav.our_wedding') %></div>
        <div class="wedding-event-section-title-border-bottom"></div>
        <p class="wedding-event-section-description"></p>
        <div class="wedding-event-section-items">
          <div class="wedding-event-item">
            <div class="wedding-event-title"></div>
            <div class="wedding-event-date"><%= t('index.event.date') %><br><%= t('index.event.time') %></br></div>
            <div class="wedding-event-attire"><%= t('index.event.attire') %></div>
            <div class="wedding-event-separator"></div>
            <div class="wedding-event-title item-title"><%= t('index.event.ceremony.title') %></div>
            <div class="wedding-event-venue"><%= t('index.event.ceremony.venue') %></div>
            <div class="wedding-event-address"><%= t('index.event.ceremony.title') %></div>
            <div class="wedding-event-separator"></div>
            <div class="wedding-event-title item-title"><%= t('index.event.reception.title') %></div>
            <div class="wedding-event-venue"><%= t('index.event.reception.venue') %></div>
            <div class="wedding-event-address"><%= t('index.event.reception.address') %></div>
          </div>
        </div>
      </div>
