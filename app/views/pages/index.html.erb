            <div class="event-description"><%= t('index.other_events.rehearsal_dinner.description') %></div>
          </div>
          <div class="event-separator"></div>
        </div>
      </div>
      <div class="section-separator"></div>
      <div class="anchor" id="wedding-party"></div>
      <div class="wedding-party-section">
